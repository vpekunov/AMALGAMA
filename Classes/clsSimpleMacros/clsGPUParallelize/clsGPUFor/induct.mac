@fast(db_gid,"db_gid.csv").
@fast(db_gpu_prog,"db_gpu_prog.csv").
@fast(db_gpu_arg,"db_gpu_arg.csv").
@context(PREV,infinity):-
  (((^)|(\;)+|\}|\)|\{|\\n|(\\n|\\t|\b)else\b|(\\n|\\t|\b)do\b|\:)((\s|\\t)*\\n)*)(\s|\\t)*.
@glue:-.
@global_unique(FOR,1):-
  ()->{GID}
  (\s|\\t)*
  (for(\s|\\t)*\(
     ()?=>{db_gid($GID)}
     ()-=>{db_gpu_prog(GID,_)}
     ()-=>{db_gpu_arg(GID,_,_)}
         (\\n|\s|\\t)*((([^;]{1,300}?)->{INITF}\,)?=>{Predicates.BAL($,',')}
            )+=>{db_gpu_arg(GID,"init",INITF)}*
            ((([^;]{0,300}?)->{INITN}\;)?=>{Predicates.BAL($,';')}
            )+=>{db_gpu_arg(GID,"init",INITN)}
         (\\n|\s|\\t)*((([^;]{0,300}?)->{COND}\;)?=>{Predicates.BAL($,';')}
            )+=>{db_gpu_arg(GID,"cond",COND)}
         (\\n|\s|\\t)*((([^;]{1,300}?)->{CHNGF}\,)?=>{Predicates.BAL($,',')}
            )+=>{db_gpu_arg(GID,"chng",CHNGF)}*
            ((([^)]{0,300}?)->{CHNGN}\))?=>{Predicates.BAL($,')')}
            )+=>{db_gpu_arg(GID,"chng",CHNGN)}
         ()+=>{db_gpu_prog(GID,"for")}
      )
  (\s|\\t)*.
